# ChessGPT Environment Configuration
# Copy this file to .env and fill in your values

# Required: OpenAI API key for ChatGPT chess moves
OPENAI_API_KEY=sk-your-api-key-here

# Optional: OpenAI Organization ID (ties API calls to a specific org)
OPENAI_ORG_ID=org-your-org-id-here

# Optional: Server port (default: 3500)
PORT=3500

# Optional: Number of worker processes for clustering (default: 1)
WEB_CONCURRENCY=1

# Optional: Logging level - error, warn, info, debug (default: info)
LOG_LEVEL=info

# Optional: Node environment - development, production (default: development)
NODE_ENV=development

# Optional: Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Optional: PostgreSQL database URL for leaderboard feature
# If not set, leaderboard feature will be disabled
# Format: postgresql://username:password@host:port/database
DATABASE_URL=
